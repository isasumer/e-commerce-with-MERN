{
  "name": "proshop",
  "version": "1.0.0",
  "description": "MERN shopping cart app",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "nodemon --experimental-modules --es-module-specifier-resolution=node backend/server",
    "server": "nodemon backend/server",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node --experimental-modules backend/seeder",
    "data:destroy": "node --experimental-modules backend/seeder -d"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/isasumer/e-commerce-with-MERN.git"
  },
  "author": "Isa Sumer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/isasumer/e-commerce-with-MERN/issues"
  },
  "homepage": "https://github.com/isasumer/e-commerce-with-MERN#readme",
  "dependencies": {
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "mongoose": "^6.0.12"
  },
  "devDependencies": {
    "concurrently": "^6.3.0",
    "nodemon": "^2.0.14"
  }
}
